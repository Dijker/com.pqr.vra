{
  "id": "com.pqr.vra",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "vRa for PEC"
  },
  "description": {
    "en": "Adds support for vRealize Automation."
  },
  "category": [
    "internet"
  ],
  "images": {
      "large": "/assets/images/large.png",
      "small": "/assets/images/small.png"
  },
  "flow" :{
    "actions": [
      {
        "id": "deploy_BluePrint",
        "title": {
          "en": "Deploy a VM from blueprint.",
          "nl": "Maak VM van blauwdruk."
        },
        "args": [
          {
            "name": "blueprintName",
            "type": "text",
            "placeholder" : "blueprintName..."
          }
        ],
        "hint" : {
          "en" : "blueprintName",
          "nl" : "blueprintNaam"
        }
      },
      {
        "id": "post_url",
        "title": {
          "en": "Post a URL to vRa",
          "nl": "Post a URL to vRa"
        },
        "args": [
          {
            "name": "url",
            "type": "text",
            "placeholder" : "url..."
          }
        ],
        "hint" : {
          "en" : "url",
          "nl" : "url"
        }
      }]
  },
  "permissions": [],
  "author": {
    "name": "Geurt Dijker",
    "email": "geurt@dijker.nu"
  }
}
